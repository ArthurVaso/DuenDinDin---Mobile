<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.UsuarioCadastroDadosPessoaisActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/seta_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/icon_setinha_voltar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="@string/txt_usuario_cadastro_titulo"
                    android:textColor="@color/border_color"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="@string/txt_usuario_cadastro_dados_pessoais_subtitulo"
                    android:textColor="@color/border_color"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_nome_completo"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nome_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/hint_usuario_cadastro_nome"
                    android:maxLength="100"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color"
                    android:maxLines="100" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_data_de_nascimento"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_data_nasc_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:drawableRight="@drawable/icon_calendar"
                    android:hint="@string/hint_usuario_cadastro_data_nasc"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:textColor="@color/border_color"
                    android:textColorHint="@color/border_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/txt_usuario_cadastro_cep"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_esqueci_cep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/txt_usuario_cadastro_esqueci_cep"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/secondary_color" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_cep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/edt_usuario_cadastro_cep"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="10"
                    app:mask="##.###-###"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_estado"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_estado_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="UF"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color"
                    android:maxLines="2"
                    android:maxLength="2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_cidade"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_cidade_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Cidade"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color"
                    android:maxLines="50"
                    android:maxLength="50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_renda_fixa"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_renda_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:hint="@string/hint_usuario_cadastro_renda"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color" />

                <Button
                    android:id="@+id/btn_usuario_cadastro_continuar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/secondary_color"
                    android:backgroundTintMode="add"
                    android:text="@string/btn_usuario_cadastro_continuar"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    app:strokeColor="@color/border_color"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
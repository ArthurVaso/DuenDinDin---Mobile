<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UsuarioCadastroDadosPessoaisActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/seta_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/icon_setinha_voltar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="@string/txt_usuario_cadastro_titulo"
                    android:textColor="@color/border_color"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="@string/txt_usuario_cadastro_dados_pessoais_subtitulo"
                    android:textColor="@color/border_color"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_nome_completo"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/hint_usuario_cadastro_nome"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_data_de_nascimento"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_data_nasc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:hint="@string/hint_usuario_cadastro_data_nasc"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color"
                    android:textColor="@color/border_color"
                    android:drawableRight="@drawable/icon_calendar"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_estado"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/sp_uf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/spUf"
                    android:minHeight="48dp"
                    app:boxStrokeColor="@color/secondary_color" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_cidade"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/sp_cidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/spCidade"
                    android:minHeight="48dp"
                    app:boxStrokeColor="@color/secondary_color"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_usuario_cadastro_renda_fixa"
                    android:textColor="@color/black" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_renda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_background"
                    android:hint="@string/hint_usuario_cadastro_renda"
                    android:inputType="textCapWords"
                    android:minHeight="48dp"
                    android:textColorHint="@color/border_color" />

                <Button
                    android:id="@+id/btn_usuario_cadastro_continuar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/btn_usuario_cadastro_continuar"
                    android:textColor="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>